{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
}